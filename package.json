{
  "name": "turborepo-template",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "doc": "tsx scripts/doc.js && typedoc && cp _config.yml docs && tsx scripts/add-frontmatter.mjs",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,css,scss}\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "preinstall": "tsx scripts/update-pm.js",
    "rebrand": "tsx scripts/rebrand.js",
    "release": "tsx ./scripts/publish.js",
    "sync": "turborepo-template-upgrade",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "upgrade": "tsx ./scripts/upgrade.js"
  },
  "pre-commit": [
    "lint:fix",
    "format"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.5.1",
    "enquirer": "^2.4.1",
    "plop": "^4.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "turborepo-template-upgrade": "^0.6.1",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.8.1",
    "typedoc-plugin-mdn-links": "^5.0.9",
    "typedoc-plugin-missing-exports": "^4.1.0",
    "typedoc-plugin-rename-defaults": "^0.7.3"
  },
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn@<6.0.6": ">=6.0.6",
      "next@>=15.0.0 <15.2.3": ">=15.2.3"
    }
  }
}